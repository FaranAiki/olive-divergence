<?xml version="1.0" encoding="UTF-8"?>
<effect name="kFrostedGlass" category="kShaders">

    <row name="Offset">
        <field type="double" default="0.0" id="kXoffset"/>
        <field type="double" default="0.0" id="kYoffset"/>
    </row>

    <row name="Radius">
        <field type="double" default="0.5" id="kRadius"/>
