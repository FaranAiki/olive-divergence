<?xml version="1.0" encoding="UTF-8"?>
<effect name="Diamond Crop" category="FaranEffect">
	<row name="Position">
		<field type="double" id="pos_x" min="-100" max="100" default="0"/>
		<field type="double" id="pos_y" min="-100" max="100" default="0"/>
	</row>	
	<row name="Anchor">
		<field type="double" id="anch_x" min="0" max="100" default="50"/>
		<field type="double" id="anch_y" min="0" max="100" default="50"/>
	</row>
	<row name="Rotation">
		<field type="double" id="rotation"/>
	</row>
	<row name="Size">
		<field type="double" default="50" id="size"/>
	</row>
	<row name="Opacity">
		<field type="double" min="0" max="100" default="0" id="opacity"/>
	</row>
	<row name="Factor">
		<field type="double" default="1" min="0" id="xfactor"/>
		<field type="double" default="1" min="0" id="yfactor"/>
	</row>
	<row name="Feather">
		<field type="double" default="0" id="feather"/>
	</row>
	<row name="Top-Left">
		<field type="bool" default="1" id="top_left"/>
	</row>
	<row name="Top-Right">
		<field type="bool" default="1" id="top_right"/>
	</row>
	<row name="Bottom-Left">
		<field type="bool" default="1" id="bottom_left"/>
	</row>
	<row name="Bottom-Right">
		<field type="bool" default="1" id="bottom_right"/>
	</row>
	<row name="Invert">
		<field type="bool" default="0" id="invert"/>
	</row>
	<shader vert="common.vert" frag="diamond.frag"/>
</effect>
