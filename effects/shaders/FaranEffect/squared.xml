<?xml version="1.0" encoding="UTF-8"?>
<effect name="Squared" category="FaranEffect">
	<shader vert="common.vert" frag="squared.frag"/>
	<row name="Interval">
		<field type="double" id="intv_x" />
		<field type="double" id="intv_y" />
	</row>
	<row name="Opacity">
		<field type="double" id="opacity" max="100" min="0" />
	</row>
	<row name="Horizontal First Side">
		<field type="combo" id="side_type_x" default="0">
			<option> Right </option>
			<option> Left </option>
		</field>
	</row>
	<row name="Vertical First Side">
		<field type="combo" id="side_type_y" default="0">
			<option> Top </option>
			<option> Bottom </option>
		</field>
	</row>
	<row name="Invert">
		<field type="bool" id="invert" />
	</row>
</effect>
